{
  "name": "doc-detective-companion",
  "description": "CSS selector helper and test builder.",
  "version": "1.0.1",
  "homepage": "https://github.com/hawkeyexl/doc-detective-browser/issues",
  "author": "Manny Silva",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hawkeyexl/doc-detective-browser/issues"
  },
  "bugs": {
    "url": "https://github.com/hawkeyexl/doc-detective-browser/issues"
  },
  "license": "MIT",
  "scripts": {
    "start": "xt-build -e dev -p chrome -w",
    "start:firefox": "xt-build -e dev -p firefox -w",
    "build": "xt-build -e prod -p chrome",
    "build:firefox": "xt-build -e prod -p firefox",
    "clean": "xt-clean",
    "docs": "xt-docs",
    "test": "xt-test",
    "coverage": "nyc --reporter=lcov npm run test",
    "sync": "xt-sync"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "eslintIgnore": [
    "test/**/*"
  ],
  "devDependencies": {
    "extension-cli": "latest",
    "webextension-polyfill": "^0.10.0"
  },
  "xtdocs": {
    "source": {
      "include": [
        "README.md",
        "src"
      ]
    }
  },
  "xtbuild": {
    "scss": "./src/**/*.css",
    "scss_bundles": [
      {
        "src": "./src/dialog.css",
        "name": "dialog"
      }
    ],
    "js_bundles": [
      {
        "name": "background-manifestv2",
        "src": "./src/background-manifestv2.js"
      },
      {
        "name": "background-manifestv3",
        "src": "./src/background-manifestv3.js"
      },
      {
        "name": "content",
        "src": "./src/content.js"
      },
      {
        "name": "dialog",
        "src": "./src/dialog.js"
      }
    ]
  },
  "dependencies": {
    "@medv/finder": "^2.1.0"
  }
}
